{
  "data": {"url": "../latencies.json"},
  "transform": {
    "calculate": [
      {"field": "min", "expr": "datum.value - datum.error"},
      {"field": "max", "expr": "datum.value + datum.error"}
    ]
  },
  "layers": [
    {
      "mark": "bar",
      "config": {
        "mark": {"color": "#999"}
      },
      "encoding": {
        "x": {
          "field": "name",
          "type": "ordinal",
          "axis": {"title": null}
        },
        "y": {
          "field": "value",
          "type": "quantitative",
          "axis": {"title": "frame latency (ms)"}
        }
      }
    },

    {
      "mark": "rule",
      "encoding": {
        "x": {"field": "name", "type": "ordinal"},
        "y": {
          "field": "min",
          "type": "quantitative"
        },
        "y2": {
          "field": "max",
          "type": "quantitative"
        }
      }
    }
  ]
}
